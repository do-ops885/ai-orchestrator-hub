{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/grok-code",
  "agent": {
    "security-auditor": {
      "model": "chutes/zai-org/GLM-4.5-FP8"
    },
    "plan": {
      "model": "chutes/zai-org/GLM-4.5-FP8"
    },
    "learner": {
      "model": "nvidia/deepseek-ai/deepseek-v3.1"
    },
    "beginner-developer": {
      "model": "nvidia/deepseek-ai/deepseek-v3.1"
    },
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "multiagent-hive": {
      "type": "local",
      "command": [
        "/workspaces/ai-orchestrator-hub/backend/target/debug/mcp_server"
      ],
      "enabled": true
    },
  },
  "provider": {
    "nvidia": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "NVIDIA NGC",
      "options": {
        "baseURL": "https://integrate.api.nvidia.com/v1"
      },
      "models": {
        "deepseek-ai/deepseek-v3.1": {
          "name": "DeepSeek v3.1"
        }
      }
    }
  }
}